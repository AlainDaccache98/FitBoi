<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_background_gradient"
    android:orientation="vertical"
    tools:context=".ui.main.UserProfileActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/ic_background_gradient_light"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="@string/greeting_message_under_profile_pic"
                android:textAlignment="center"
                android:textColor="@color/textWhite"
                android:textSize="13pt"
                android:textStyle="bold" />

            <ProgressBar
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="40dp"/>

            <TextView
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Profile Complete"
                android:textSize="5pt"
                android:textColor="@color/textWhite"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:textAlignment="center">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center|right"
                android:layout_margin="10dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p3" />

            </androidx.cardview.widget.CardView>

            <Button
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="bottom|center"
                android:background="@drawable/filled_rounded_button"
                android:outlineSpotShadowColor="@color/textWhite"
                android:text="Edit Profile"
                android:textAllCaps="false"
                android:textColor="@color/colorOrangeRed"
                android:textStyle="bold">

            </Button>

        </LinearLayout>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="526dp"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/button_full_transparent"
            android:drawableRight="@drawable/arrow_right_white"
            android:drawableLeft="@drawable/profile_info_icon"
            android:shadowColor="@color/textBlack"
            android:outlineSpotShadowColor="@color/textBlack"
            android:elevation="30dp"
            android:textAllCaps="false"
            android:text="Profile Information"
            android:shadowDx="true"
            android:textSize="9pt"
            android:textStyle="bold"
            android:textColor="@color/textWhite">

        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/button_full_transparent"
            android:drawableRight="@drawable/arrow_right_white"
            android:drawableLeft="@drawable/goal_icon"
            android:shadowColor="@color/textBlack"
            android:elevation="5dp"
            android:textAlignment="center"
            android:text="View Goals"
            android:textAllCaps="false"
            android:shadowRadius="2dp"
            android:outlineSpotShadowColor="@color/textBlack"
            android:textSize="9pt"
            android:textStyle="bold"
            android:textColor="@color/textWhite"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/button_full_transparent"
            android:drawableRight="@drawable/arrow_right_white"
            android:drawableLeft="@drawable/goal_icon"
            android:shadowColor="@color/textBlack"
            android:elevation="5dp"
            android:textAlignment="center"
            android:text="View Goals"
            android:textAllCaps="false"
            android:shadowRadius="2dp"
            android:outlineSpotShadowColor="@color/textBlack"
            android:textSize="9pt"
            android:textStyle="bold"
            android:textColor="@color/textWhite"/>

    </LinearLayout>

</LinearLayout>